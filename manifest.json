{
    "manifest_version": 3,
    "name": "HSD mdl no forced download",
    "version": "1.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "hsd-mdl-noforced-dl@jaboll"
        }
    },
    "description": "An extension that blocks forced download of the HSD moodles PDFs",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://mdl.hs-duesseldorf.de/*"
            ],
            "js": [
                "lib/browser-polyfill.min.js",
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        }
    }
}